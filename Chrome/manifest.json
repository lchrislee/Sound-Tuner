{
	"name": "SoundTuner",
	"version": "0.0.0.3",
	"manifest_version": 2,
	"description": "An extension that allows you to change the volume of each tab.",
	"author": "Chris Lee",
	
	"icons":{
		"16": "img/image16.png",
		"48": "img/image48.png",
		"128": "img/image128.png"
	},
	
	"browser_action":{
		"default_icon":{			
			"19": "img/image19.png",
			"38": "img/image38.png"
		},
		"default_title": "Tune Sound",
		"default_popup": "popup.html"
	},
	
	"permissions": ["tabs", "<all_urls>"],
	
	"background":{
		"scripts": ["js/background.js"],
		"persistent": false
	},
	
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["js/content.js"],
			"run_at": "document_end"
		}
	],
	
	"devtools_page": "devtools.html"
}