{
	"name": "SoundTuner",
	"version": "0.0.0.1",
	"manifest_version": "2",
	"description": "An extension that allows you to change the volume of each tab.",
	"author": "Chris Lee",
	
	"icons":{
		"16": ".png",
		"48": ".png",
		"128": ".png"
	},
	
	"browser_action":{
		"default_icon":{			
			"19": ".png",
			"38": ".png",
		},
		"default_title": "Tune Sound",
		"default_popup": "popup.html"
	},
	
	"permissions": ["tabs"],
	
	"background":{
		"scripts": ["background.js"],
		"persistent": false
	},
	
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["content.js"]
		}
	],
	
	"devtools_page": "devtools.html"
}